FROM node:20-slim

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install --production

# Copy application files
COPY . .

# Expose port (Hugging Face uses 7860 by default)
EXPOSE 7860

# Set environment variable for port
ENV PORT=7860

# Start the addon
CMD ["npm", "start"]

